<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
    <mapper namespace="com.zjj.aisearch.mapper.IndexMapper">


    <select id="index" resultType="com.zjj.aisearch.model.User">
        select * from users where username = 'zjj'
    </select>
    
    <insert id="insertSearchRecord" parameterType="com.zjj.aisearch.model.SearchRecord">
         insert into searchrecord(keyword,searchtime) values(#{keyword},#{searchTime})
    </insert>


