<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
    <mapper namespace="com.zjj.aisearch.mapper.IndexMapper">
    <resultMap id="itemMap" type="Item">
        <id property="id" column="id" />
        <result  property="title" column="title" />
        <result  property="sellPoint" column="sell_point" />
        <result  property="price" column="price" />
    </resultMap>

    <select id="index" resultType="User">
        select * from users where username = 'zjj'
    </select>
    
    <insert id="insertSearchRecord" parameterType="SearchRecord">
         insert into searchrecord(keyword,searchtime) values(#{keyword},#{searchTime})
    </insert>

    <select id="search" resultType="Article" >
        select * from article where content =  #{keyword}
    </select>

    <select id="searchItem" resultMap="itemMap" >
        select * from tb_item where title like "%"#{name}"%"
    </select>

</mapper>